package oddevengame;
import javax.swing.JOptionPane;


public class OddEvenGame {
    public static void main(String[] args) {
  // Ask the user to guess the number is odd or even
  String userGuess = JOptionPane.showInputDialog(
    "You're guessing a number generated by computer is odd or even!\nThe number is only between 0 and 100\nEnter ODD or EVEN here:", "Your guess here");
  // Convert to lower case
  userGuess = userGuess.toLowerCase();
  /* Generate a random number*/
  int randomNumber = (int)(Math.random() * 101);
  String computerNumber; // Computer's choice
  if (randomNumber%2 == 0)
   computerNumber = "even";
  else
   computerNumber = "odd";
  String message = "The computer number is " + randomNumber + ". You guessed: "
    + userGuess;
  // Determine user win or not
  boolean userWin = computerNumber.equals(userGuess);
  // Prepare the message
  if (userWin)
   message += ". You won.";
   // So we don't have to test here, if the code reach here, human loose.
  else
   message += ". You lose";
  // Display the result on the screen
  JOptionPane.showMessageDialog(null, message);
 }
}
