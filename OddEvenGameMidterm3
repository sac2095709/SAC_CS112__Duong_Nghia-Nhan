package oddevengame;
import javax.swing.JOptionPane;


public class OddEvenGame {
    public static void main(String[] args) {
    int roundGameNumber = 0;
    int roundWon = 0;
    int roundLose = 0;
    boolean playAgain = true; // Loop control

while (playAgain=true)
{   roundGameNumber++;
  // Ask the user to guess the number is odd or even
  String userGuess = JOptionPane.showInputDialog(
    "You're guessing a number generated by computer is odd or even!\nThe number is only between 0 and 100\nEnter ODD or EVEN here:", "Your guess here");
  // Convert to lower case
  userGuess = userGuess.toLowerCase();
  /* Generate a random number
     Odd (0),  Even (1), paper (2)*/
  int randomNumber = (int)(Math.random() * 101);
  String computerNumber; // Computer's choice
  if (randomNumber%2 == 0)
   computerNumber = "even";
  else
   computerNumber = "odd";
  String message = "The computer number is " + randomNumber + ". You guessed: "
    + userGuess;
  // Determine user win or not
  boolean userWin = computerNumber.equals(userGuess);
  // Prepare the message
  if (userWin)
  {message += ". You won.\n\n"
           + "The game will replay, if you don't wish to play again\n"
           + "Please click \"Cancel\"";
  roundWon++;}
   // So we don't have to test here, if the code reach here, human loose.
  else
  {message += ". You lose.\n\n"
           + "The game will replay, if you don't wish to play again\n"
           + "Please click \"Cancel\"";
  roundLose++;}
  // Display the result on the screen
  JOptionPane.showMessageDialog(null, message);
   // Ask the user to play again
  
  String roundTrack = "You played "+roundGameNumber+"total rounds!\nYou won " +roundWon+" rounds!\nYou lose "+
          roundLose+" rounds!";
  JOptionPane.showMessageDialog(null, roundTrack);
  
  String userChoice = JOptionPane.showInputDialog("Do you wish to play again? Type Q then click OK to quit", "Left blank here to continue");
  userChoice = userChoice.toLowerCase();
  if (userChoice.equals("q"))
      System.exit(0);
  else playAgain = true;
 }
  
}
}
